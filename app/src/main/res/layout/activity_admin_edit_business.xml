<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".Admin.AdminEditBusiness">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_add_new_business"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/nav_bar_header_theme">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/close_edit_business_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:text="Close"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/adminHome_edit_business_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="AdminHome"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"/>

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar_add_new_business">


            <ImageView
                android:id="@+id/business_image"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:cropToPadding="false"
                android:scaleType="centerCrop" />

            <EditText
                android:id="@+id/edit_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_image"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="#009688"
                android:hint="Buinsesss Name..."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A4BFBD"
                android:textSize="17dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edit_business_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_business_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="#009688"
                android:hint="Buinsesss Description..."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A4BFBD"
                android:textSize="17dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edit_business_opening_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_business_description"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="#009688"
                android:hint="Buinsesss Opening Hours..."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A4BFBD"
                android:textSize="17dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edit_business_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_business_opening_hours"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="#009688"
                android:hint="Buinsesss Location..."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A4BFBD"
                android:textSize="17dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edit_business_contact_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_business_location"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="#009688"
                android:hint="Buinsesss Contact Info..."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A4BFBD"
                android:textSize="17dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/edit_business_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_business_contact_info"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="#009688"
                android:hint="Buinsesss Website..."
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#A4BFBD"
                android:textSize="17dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/update_business_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_business_website"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text="Update Business"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#016868" />

            <Button
                android:id="@+id/business_admin_reviews_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_business_btn"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:text="Business Reviews"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#016868" />

            <Button
                android:id="@+id/delete_business_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_admin_reviews_btn"
                android:layout_marginHorizontal="30dp"
                android:padding="10dp"
                android:text="Delete Business"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#016868"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>