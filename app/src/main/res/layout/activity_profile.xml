<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/nav_bar_header_theme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="@drawable/nav_bar_header_theme">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/home_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Home"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/app_bar_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/profile_fName_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_profile_image"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:text=""
        android:textSize="22dp"
        android:textStyle="bold"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/textview_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"

        android:layout_below="@+id/profile_fName_TV"
        android:text="Phone Number: "
        android:textSize="16dp"
        android:textStyle="bold"

        android:padding="10dp"
        />

    <TextView
        android:id="@+id/profile_phone_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_fName_TV"
        android:layout_toRightOf="@id/textview_phone"
        android:layout_marginTop="15dp"

        android:text=""
        android:textSize="16dp"
        android:textStyle="normal"
        android:padding="10dp"
        android:textColor="#8c8c8c"
        />

    <TextView
        android:id="@+id/textview_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"

        android:layout_below="@+id/profile_phone_TextView"
        android:text="Email Address: "
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/profile_email_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_phone_TextView"
        android:layout_toRightOf="@+id/textview_email"
        android:layout_marginTop="15dp"

        android:text=""
        android:textSize="16dp"
        android:textStyle="normal"
        android:padding="10dp"
        android:textColor="#8c8c8c"
        />

    <TextView
        android:id="@+id/textview_institution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="15dp"
        android:layout_below="@+id/profile_email_TextView"
        android:text="Currently Attending: "
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/profile_institution_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_email_TextView"
        android:layout_toRightOf="@+id/textview_institution"
        android:layout_marginTop="15dp"

        android:text=""
        android:textSize="16dp"
        android:textStyle="normal"
        android:padding="10dp"
        android:textColor="#8c8c8c"
        />

    <TextView
        android:id="@+id/textview_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="15dp"
        android:layout_below="@+id/profile_institution_TextView"
        android:text="Currently Studying: "
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/profile_degree_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_institution_TextView"
        android:layout_toRightOf="@+id/textview_degree"
        android:layout_marginTop="15dp"

        android:text=""
        android:textSize="16dp"
        android:textStyle="normal"
        android:padding="10dp"
        android:textColor="#8c8c8c"
        />

    <TextView
        android:id="@+id/textview_YOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"

        android:layout_below="@+id/profile_degree_TextView"
        android:text="Year of Study: "
        android:textSize="16dp"
        android:textStyle="bold"
        android:padding="10dp" />

    <TextView
        android:id="@+id/profile_year_of_study_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/profile_degree_TextView"
        android:layout_toRightOf="@+id/textview_YOS"
        android:layout_marginTop="15dp"

        android:padding="10dp"
        android:text=""
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="#8c8c8c"
        />

    <Button
        android:id="@+id/redirect_updateProfile_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_year_of_study_TextView"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="80dp"
        android:padding="10dp"
        android:text="Update Profile"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold"
        app:backgroundTint="#016868" />


</RelativeLayout>