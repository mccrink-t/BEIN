<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nav_bar_header_theme">

        <RelativeLayout
            android:id="@+id/postItemR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/postItemR2"
            android:layout_below="@+id/postItemR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/textView_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Post Title: "
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/textView_post_title"
                android:text="Post Name"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/postItemR3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postItemR2"
            android:layout_marginHorizontal="5dp">

            <TextView
                android:id="@+id/textView_post_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Post Blurb:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/textView_post_description"
                android:text="Post Description"
                android:textSize="16dp"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginHorizontal="5dp"
            android:id="@+id/postItemR4"
            android:layout_below="@+id/postItemR3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/postItemR4Sub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/textView_posted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Posted By:"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/textView_posted_by"
                android:text="User's Name"
                android:textStyle="bold"
                android:textSize="12dp" />

            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/postItemR4Sub2"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/textView_posted_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Posted on:"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/textView_posted_date"
                android:text="Date"
                android:textStyle="bold"
                android:textSize="12dp" />
        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>



