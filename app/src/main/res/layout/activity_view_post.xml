<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/single_post_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:overScrollMode="ifContentScrolls"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        tools:context=".Posts.View_Post">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_view_post"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/nav_bar_header_theme">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_single_post_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/close_post_view_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:text="Close"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:id="@+id/r1PostReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_bar_view_post"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textTotalPostReviewsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reviews: "
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTotalPostReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textTotalPostReviewsTextView"
                android:text="(0)"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTotalPostRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/textTotalPostReviews"
                android:text="Rating: "
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTotalPostRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textTotalPostRatingTextView"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/postDetailsRL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r1PostReviews"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/image_post_view"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/postTitle_Post_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_post_view"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Post Title"
                android:textColor="@android:color/white"
                android:textSize="24dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/postDetailsRL2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/postDetailsRL1"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/text_description_Post_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted By: "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/users_Name_Post_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text_description_Post_View"
                android:text="User's Name"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="normal" />

            <View
                android:id="@+id/separator2"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/users_Name_Post_View"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:background="#808080" />

            <TextView
                android:id="@+id/text_Post_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator2"
                android:layout_marginVertical="5dp"
                android:text="Post Text"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:textStyle="normal" />

            <View
                android:id="@+id/separator3"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/text_Post_View"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:background="#808080" />

            <TextView
                android:id="@+id/Posted_On_Date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator3"
                android:text="Posted On: "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/date_Post_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator3"
                android:layout_toRightOf="@+id/Posted_On_Date_textview"
                android:text="Dec 1st 1999"
                android:textColor="@color/light_grey"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/Posted_On_Time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator3"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/date_Post_View"
                android:text="at:  "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/time_Post_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator3"
                android:layout_toRightOf="@+id/Posted_On_Time_textview"
                android:text="9:15pm"
                android:textColor="@color/light_grey"
                android:textSize="15dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/post_comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_Post_View"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="Comments"
                android:textColor="#FFFFFF"
                android:textSize="13dp"
                android:textStyle="bold"
                app:backgroundTint="#016868"></Button>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>